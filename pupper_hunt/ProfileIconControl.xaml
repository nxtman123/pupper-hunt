<UserControl x:Class="pupper_hunt.ProfileIconControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:pupper_hunt"
             mc:Ignorable="d" 
             d:DesignHeight="95" d:DesignWidth="74">
    <Grid>
        <Grid x:Name="ProfileIcon" HorizontalAlignment="Left" Height="95" Margin="0" VerticalAlignment="Top" Width="74" MouseDown="ProfileIcon_MouseDown">
            <Ellipse x:Name="Image" HorizontalAlignment="Center" Height="70" VerticalAlignment="Top" Width="70">
                <Ellipse.Fill>
                    <ImageBrush/>
                </Ellipse.Fill>
            </Ellipse>
            <TextBlock x:Name="Name" TextAlignment="Center" Height="20" Margin="0,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="70" FontSize="16" Text="NAME"/>
        </Grid>

    </Grid>
</UserControl>
